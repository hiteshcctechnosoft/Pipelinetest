{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019", "ES2020"],
    "strict": true,
    "declaration": false,
    "noEmit": false,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": "src",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
